        <div>
          <% if (user.friends.length > 0) {%>
            <h1 class="mt-2 w-full text-start text-md">See your friend list:</h1>
            <% Array.from(user.friends).forEach(function (friend) { %>
              <%- include('user-card') %>
            <% }); %>
          <% } else { %>
          <% } %>
