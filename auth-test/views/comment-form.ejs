<div>
  <% if (user) {%>
    <form action="<%= note._id %>/comment" method="POST">
      <div class="m-auto flex min-h-full max-w-lg flex-col justify-center px-6 py-3 lg:py-8 lg:px-8">
        <div class="border-t border-gray-900/10 pb-6 pt-6">
          <div class="mt-3 grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6">
            <div class="col-span-full">
              <label for="about" class="block text-sm font-medium leading-6 text-gray-900">Comment</label>
              <div class="mt-2">
                <textarea id="body" name="body" rows="3" required maxlength="150" minlength="3" class="resize-none block w-full rounded-md border-0 p-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-pink-950 sm:text-sm sm:leading-6"></textarea>
              </div>
              <div class="flex justify-between">
                <p class="mt-3 text-sm leading-6 text-gray-600">150 max characters.</p>
                <button type="submit" class="mt-3 flex justify-center rounded-md bg-zinc-950 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-pink-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-green-500">Enviar comentario</button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </form>
  <% } else { %>
    <%- include('login-form') %>
  <%}%>
</div>

